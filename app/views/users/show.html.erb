<div class="col1">
<div class="user-info card">
Email: <%= @user.email %>
<br><br>
Phone: <%=@user.mobile_number %>
</div>

<div class="reminder-show card">
<h3>My Reminders</h3>
  <ul>
    <% @reminders.each do |reminder| %>
      <li>
        A reminder for train number <%= reminder.trainno %>
        will be sent at <%= reminder.alarmtime.strftime('%H:%M') %>
        if the train is more than <%= reminder.offset %> minutes late on the following days: 
        <%= reminder.days %>
        <br>
        <%= link_to "Edit Reminder", edit_reminder_path(reminder), :class => 'edit-reminder', remote: true %>
      </li>
    <% end %>
  </ul>
</div>
<%= link_to "Set Up New Reminder", new_reminder_path, :class => 'new-reminder'%>
</div>
<div class="col2">
  <div class="new-reminder-form form">
    <%= render 'shared/new' %>
  </div>
  <div id="edit-form-place">
    
  </div>
</div>



